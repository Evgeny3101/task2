@require '../text-field/text-field.styl'


.sign-in-menu
  width  380px
  height  358px
  background  default-color
  border  1px solid rgba(0, 0, 0, 0.12)
  box-shadow  0px 0px 25px rgba(0, 0, 0, 0.2)
  border-radius  4px

  &__wrapper
    padding         39px 29px

  &__title
    margin-bottom   21px

  &__text-field
    margin-top      10px

  &__login-button
    height          44px
    margin-top      20px

  &__create-account
    margin-top 30px

  .create-account
    container()
    &__text
      padding-bottom 2px
      color #000

    &__button-create
      height 44px
      width 99px


// media //
.sign-in-menu
  @media  (max-width phoneWidth)
    width        100%
