include ../text-field/text-field

mixin sign-in-menu
  +b.SECTION.sign-in-menu
    +e.FORM.wrapper
      +e.title
        +b.H1.title_size-1 Войти

      +e.text-field
        +text-field('email', 'Email')(autocomplete='email')

      +e.text-field
        +text-field('password', 'Пароль')(autocomplete='current-password')

      +e.login-button
        +b.BUTTON.button._regular-big._relative войти
          +e.I.icon.material-icons arrow_forward

      +e.create-account
        +b.sign-in-menu-create-account
          +e.text Нет аккаунта на Toxin?
          +e.button-create
            +b.A.button._regular-big-transparent(href='sign-up.html') создать
