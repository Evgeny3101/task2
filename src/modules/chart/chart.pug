mixin chart(config=false)
  - if (!config) config = require('../../modules/chart/chart.json');
  - const { id, text, width, height } = config;

  +b.FIGURE.chart
    +e.container.js-chart__container
      +e.number.js-chart__number
      +e.SPAN.text= text

    +e.CANVAS.image(id=id, width=width, height=height)
