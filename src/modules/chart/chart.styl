.chart
  position          relative
  z-index           1
  width             100%
  height            100%

  &__container
    position          absolute
    z-index           -1

    top               0
    width             100%
    height            100%
    container(center)
    flex-direction    column

    color             regular-color
    text-transform    uppercase
    font-weight       bold

  &__number
    font-size         24px

  &__text
    padding           1px 0 3px
    font-size         12px