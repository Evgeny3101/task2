.toggle
  cursor pointer

  &__input
    display none

    &:checked ~ .toggle__box
      border 1px solid regular-color

      &:after
        left 23px
        background linear-gradient(primary-gradient)

  &__box
    position relative
    display block
    float left
    width 40px
    height 20px
    border 1px solid fade-out(0.25)
    border-radius 10px
    margin-right 10px
    transition border 0.2s ease-in-out

    &:after
      content ''
      width 12px
      height 12px
      position absolute
      top 3px
      left 3px
      border-radius 10px
      background-color fade-out(0.25)
      transition left 0.2s ease-in-out

  &__text
    font-style 14px
    color fade-out()
