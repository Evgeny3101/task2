.like-button
  &__button
    height 20px
    width 40px
    padding  0 7px 0 1px
    container(space-around)
    border 1px solid fade-out(0.25)
    border-radius  10px
    color fade-out(0.25)
    font-size  10px

  &_checked
    color regular-color
    border 1px solid regular-color

  &__icon
    font-size  10px



