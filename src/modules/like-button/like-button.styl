.like-button
  height 20px
  width 40px
  padding-right 7px
  padding-left 2px
  container(space-around)
  border 1px solid fade-out(0.25)
  border-radius 10px
  color fade-out(0.25)
  font-size 10px

  &__icon
    font-size 10px

  &__number
    line-height 12px

  &_checked
    color regular-color
    border 1px solid regular-color
