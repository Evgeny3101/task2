mixin price-list(items)

  +b.price-list
    +e.UL.items
      each item in items
        - const modInfo = item.info ? '' : '_without-info'

        +b.LI.price-list-item(class= modInfo)
          +e.P.text= item.text
          +e.P.info i
          +e.P.sum= item.sum
