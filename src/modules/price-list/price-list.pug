mixin price-list(config=false)
  - if (!config) config = require("../../modules/price-list/price-list.json");

  +b.price-list
    +e.UL.items
      each itemConfig in config
        - const { hasInfo, text, sum } = itemConfig;
        - const classMod = hasInfo ? "" : "_without-info";

        +b.LI.price-list-item(class=classMod)
          +e.SPAN.text= text
          +e.SPAN.info i
          +e.SPAN.sum= sum
