include ../dropdown/dropdown

//-  local mixin
mixin item-count(mod, title, result, deactive)
  +b.item-count(class=mod)
    +e.title= title
    +e.container-btn
      +e.minus-btn(class=deactive) -
      +e.result= result
      +e.plus-btn +


mixin dropdown-menu(place, data)
  +b.dropdown-menu&attributes(attributes)
    +dropdown({
      "type" : "text",
      "place": place
    })

    +b.dropdown-menu-count
      +e.wrapper
        +e.container
          +item-count(data.count1.mod, data.count1.title, data.count1.result, data.count1.deactive)

        +e.container
          +item-count(data.count2.mod, data.count2.title, data.count2.result, data.count2.deactive)

        +e.container
          +item-count(data.count3.mod, data.count3.title, data.count3.result, data.count3.deactive)


        +e.container-btn
          div
            +b.button._fade05.clear очистить
          div
            +b.button._blue.apply применить