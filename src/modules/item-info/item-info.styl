.item-info
  width  280px
  height 89px
  display flex
  align-items  center
  border-bottom  1px solid fade-out(0.1)

  &__icon
    margin-right 10px
    width 48px
    font-size  48px
    color regular-color
    background linear-gradient(primary-gradient)
    -webkit-background-clip text
    -webkit-text-fill-color transparent

  &__title,
  &__text
    line-height  24px

  &_border-none
    border none