@require "../like-button/like-button"


.reviews
  display  grid
  grid-template-columns  48px auto
  grid-gap  10px 9px
  padding-left  1px

  &__img-container
    position relative
    overflow hidden
    width  48px
    height 48px
    border  2px solid default-color
    border-radius  25px

  &__img
    position absolute
    top -12px
    left -23px

  &__name
    font-weight  bold
    line-height  24px

  &__date
    font-weight  normal

  &__like-button
    padding  2px 3px

  &__text
    line-height  24px