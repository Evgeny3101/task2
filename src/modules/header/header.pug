include ../logo/logo

mixin header(config=false)
  - if (!config) config = require("../../modules/header/header.json");
  - const { login, register, user, links } = config;

  +b.HEADER.header
    +e.wrapper
      +e.logo
        +logo

      +e.NAV.navigation
        +e.header-menu
          +b.UL.header-menu
            each itemConfig in links
              - const { href, isMod, text, hasIcon } = itemConfig;
              - const classMod = isMod ? "_bold" : "";

              +e.LI.item
                +e.A.link(href=href, class=classMod)= text
                  if (hasIcon)
                    +e.I.icon.material-icons keyboard_arrow_down

        if (user)
          +e.user
            +e.button
              +b.BUTTON.button._default(type='button')= user

        else
          +e.auth-btn
            +b.header-auth-button
              +e.button-sign-in
                +b.A.button._regular-big-transparent(href='sign-in.html')= login

              +e.button-sign-up
                +b.A.button._regular-big(href='sign-up.html')= register
