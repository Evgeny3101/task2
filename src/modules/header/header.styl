@require "../logo/logo"
@require "../button/button"

.header
  position relative
  z-index  1
  background default-color
  box-shadow 0px 10px 20px fade-out(0.05)

  &__wrapper
    max-width 1160px
    line-height 40px
    padding 15px 0
    margin 0 auto

  &__wrapper,
  &__container,
  .auth-btn,
  .header-menu
    container()



  &__line
    height 30px
    border-left  1px solid fade-out(0.1)

  &__user
    margin-left  20px

.header-menu
  color  fade-out(0.5)

  &__link
    display flex
    justify-content space-between
    align-items  center
    background  default-color
    margin-right 20.5px

    &_bold
      color fade-out()
      font-weight bold

  &__icon
    padding-top      4px


.auth-btn
  &__button-sign-in
    height    34px
    width     87px

  &__button-sign-up
    height    34px
    width     196px
    margin-left 20px




// media

.header
  @media    (max-width  smDesktopWidth)
    padding 12px 15px

.header-menu
  @media    (max-width  smDesktopWidth)
    display         flex
    flex-direction  column
    justify-content flex-start
    align-items     flex-start
    position        absolute
    top             60px
    right           25px
    z-index         1
    max-height      0
    font-size       0
    overflow        hidden
    transition      0.15s all

    &__item
      border          1px solid fade-out(0.2)
      border-radius   2px
      margin-bottom   -1px

    &__link
      width           140px
      padding-left    10px

    &__icon
      margin-left   auto
      margin-right  5px



.auth-btn__button-sign-up
  @media    (max-width  phoneWidth)
    display   none

