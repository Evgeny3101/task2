@require '../logo/logo'
@require '../button/button'

.header
  position relative
  z-index  1
  background default-color
  box-shadow 0px 10px 20px fade-out(0.05)

  &__wrapper
    max-width 1160px
    line-height 40px
    margin 0 auto

  &__wrapper,
  &__navigation,
  &-auth-button,
  &-menu
    container()

  &__logo,
  &__navigation
    padding 15px 0

  &__user
    line-height 30px
    padding-left  20px
    border-left  1px solid fade-out(0.1)

  // header-menu
  &-menu
    color  fade-out(0.5)

    &__link
      display flex
      justify-content space-between
      align-items  center
      background  default-color
      margin-right 20px
      letter-spacing 0.05px

      &_bold
        color fade-out()
        font-weight bold
        padding-right 1px

    &__icon
      padding-top 4px

  // header-auth-button
  &-auth-button
    &__button-sign-in
      height    34px
      width     87px

    &__button-sign-up
      height    34px
      width     196px
      margin-left 20px
  //
  //
  // media
  @media (max-width  desktopWidth)
    padding-right 15px
    padding-left  15px

  @media (max-width  smDesktopWidth)
    &-menu
      display         flex
      flex-direction  column
      justify-content flex-start
      align-items     flex-start
      position        absolute
      top             60px
      right           25px
      z-index         1
      max-height      0
      font-size       0
      overflow        hidden
      transition      0.15s all

      &__item
        border          1px solid fade-out(0.2)
        border-radius   2px

      &__link
        width           140px
        padding-left    10px

      &__icon
        margin-left   auto
        margin-right  5px

  @media (max-width  phoneWidth)
    &-auth-button__button-sign-up
      display   none

