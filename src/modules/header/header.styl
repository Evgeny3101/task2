@require '../logo/logo'
@require '../button/button'
@require '../header-menu/header-menu'

.header
  position relative
  background default-color
  box-shadow 0px 10px 20px fade-out(0.05)

  &__wrapper
    max-width 1160px
    line-height 40px
    margin 0 auto

  &__wrapper,
  &__navigation,
  &-auth-button,
  &-menu
    container()

  &__logo,
  &__navigation
    padding 15px 0

  &__user
    height 100%
    margin-left 15px    
    padding-left 20px
    border-left  1px solid fade-out(0.1)

  // header-auth-button
  &-auth-button
    padding-left 15px
    &__button-sign-in
      height    34px
      width     87px

    &__button-sign-up
      height    34px
      width     196px
      margin-left 20px

      @media (max-width  phoneWidth)
        display   none
  
  // media
  @media (max-width  desktopWidth)
    padding-right 15px
    padding-left  15px



