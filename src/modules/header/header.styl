@require '../logo/logo'
@require '../header-menu/header-menu'

.header
  position relative
  background default-color
  box-shadow 0px 10px 20px fade-out(0.05)

  &__wrapper
    max-width 1160px
    line-height 40px
    margin 0 auto

  &__wrapper,
  &__navigation,
  &__auth-wrapper
    container()

  &__logo,
  &__navigation
    padding 15px 0

  &__user
    height 100%
    margin-left 15px    
    padding-left 20px
    border-left 1px solid fade-out(0.1)

  &__user-button
    button('default')

  &__auth-wrapper
    padding-left 15px

    @media (max-width tableWidth)
      padding-left 0

  &__sign-in,
  &__sign-up
    height 34px

    @media (max-width tableWidth)
      width auto

  &__sign-in
    width 87px

  &__sign-up
    width 196px
    margin-left 20px

    @media (max-width tableWidth)
      margin-left 10px

  &__auth-button
    @media (max-width tableWidth)
      display none

  &__button-sing-in
    button('transparent')

  &__button-sing-up
    button('regular')

  &__icon
    display none
    margin-left 10px
    font-size 32px
    color regular-color

    &:active,
    &:hover
      color fade-out(0.5, regular-color)

    @media (max-width tableWidth)
      display block

  @media (max-width desktopWidth)
    padding-right 15px
    padding-left  15px
