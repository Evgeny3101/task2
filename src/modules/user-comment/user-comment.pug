include ../like-button/like-button

mixin user-comment(config)
  - if (!config) config = require("../../modules/user-comment/user-comment.json");
  - const { name, date, active, image, likes, text } = config;

  +b.ARTICLE.user-comment
    +e.FIGURE.image
      +b.IMG.user-comment-image(src=image, alt='аватар пользователя')

    +e.header
      +e.name
        +b.H3.title_fade-075= name
      +e.date-wrapper
        +e.SPAN.date= date

    +e.like-button
      if (active === true)
        +like-button(likes).like-button_checked
      else
        +like-button(likes)

    +e.P.text= text
