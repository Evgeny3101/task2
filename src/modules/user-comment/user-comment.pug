mixin user-comment(data)
  - const {name, date, active, image, likes} = data;

  +b.user-comment
    +e.image
      +b.IMG(src= image alt="аватар пользователя").image

    +e.header
      +e.name
        +b.H3.title_fade-075= name
      +e.P.date= date

    +e.like-button
      if(active === true)
        +like-button(likes).like-button_checked
      else
        +like-button(likes)

    +e.P.text= data.text
