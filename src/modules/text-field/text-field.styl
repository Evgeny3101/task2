.text-field
  width         100%
  height        44px
  line-height   44px
  padding       0 14px 2px 
  font-size     14px
  color         fade-out(0.75)
  border        1px solid fade-out(0.25)
  border-radius 4px
  text-align    left
  text-overflow ellipsis   // работает на input type=text
  white-space   nowrap
  overflow      hidden
  cursor        text  

  &_button
  &[type='button']
    cursor pointer

  &_checked,
  &:focus,
  &:hover
    border      1px solid fade-out(0.5)

  &::placeholder
    color       fade-out(0.25)

  &_placeholder-dark
    &::placeholder
      color fade-out(0.75)

  // dropdown активен
  &_dropdown-active
    border-color    fade-out(0.5)
    border-bottom-left-radius   0px
    border-bottom-right-radius  0px

  &_padding-right 
    padding-right 45px

  &_padding-right-large
    padding-right 90px