.text-field
  width         100%
  height        44px
  line-height   24px
  padding       0 45px 2px 14px
  font-size     14px
  color         fade-out(0.75)
  border        1px solid fade-out(0.25)
  border-radius 4px
  text-overflow ellipsis   // работает на input type=text
  text-align    left

  &_checked,
  &:focus,
  &:hover
    border      1px solid fade-out(0.5)

  &::placeholder
    color       fade-out(0.25)

  &_placeholder-dark
    &::placeholder
      color fade-out(0.75)

  // dropdown активен
  &_dropdown-active
    border-color    fade-out(0.5)
    border-bottom-left-radius   0px
    border-bottom-right-radius  0px