include ../logo/logo
include ../social-link/social-link
include ../subscription/subscription


mixin footer(config)
  - const {text, subTitle, subText, subPlace, bottomText} = config

  +b.FOOTER.footer
    +e.top-area
      +e.represent
        +b.footer-represent
          +e.logo
            +logo()
          +e.SPAN.text= text

      +e.menu
        +b.footer-menu
          each menu in config.menus
            +e.SECTION.container
              each item in menu
                if(item.title)
                  +e.title
                    +b.H2.title_size-3= item.title
                else
                  +e.LI.link
                    +b.A.link(href=item.href)= item.text

          +e.SECTION.container._width-260
            +e.title-sub
              +b.H2.title_size-3= subTitle
            +e.SPAN.text= subText

            +e.subscription
              +subscription({
                'type'  : 'email',
                'place' : subPlace,
              })

    +e.bottom-area
      +b.footer-bottom-area
        +e.SMALL.text= bottomText
        +e.social-link
          +social-link()

