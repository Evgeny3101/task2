.footer
  background-color default-color
  font-size: 14px
  color fade-out()

  &__container-top
    container(, , flex-start)

  &__top-area
    height 372px
    padding 100px 0 0
    box-shadow: 0px 1px 0px fade-out(0.1)

  &__container-logo
    width 260px

  &__logo
    padding-bottom: 17px

  &__text
    line-height: 24px
    letter-spacing: -0.1px


  .footer-menu
    flex-grow: 1
    margin: 4px 0 0 40px
    display: flex
    justify-content: space-between
    letter-spacing: -0.1px

    &__container
      width 150px
      display: flex
      flex-direction: column

      &_w260
        width 260px

    &__link
      color fade-out(0.5)
      margin-bottom: 20px

    &__title-menu
      margin-bottom: 21px

    &__title-sub
      margin-bottom: 18px
      letter-spacing: -0.25px

    &__text
      line-height: 24px

    &__subscription
      margin-top: 23px


  &__bottom-area
    box-shadow: 0px 10px 20px fade-out(0.05)
    border-top: 1px solid #E5E5E5
    height: 70px

  &__container-bottom
    container()
    width: 100%
    height: 70px