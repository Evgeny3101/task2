@require '../logo/logo'
@require '../social-link/social-link'
@require '../subscription/subscription'


.footer
  background-color default-color
  font-size  14px
  color fade-out()
  box-shadow: 0px 10px 20px fade-out(0.05)

  &__top-area
    padding-top  100px
    padding-bottom 80px
    box-shadow   0px 1px 0px fade-out(0.1)
    max-width    1160px
    container(, flex-start)
    margin       0 auto

  // represent
  &__represent
    width          260px
    margin-right   40px

  &-represent
    &__logo
      padding-bottom  17px
    &__text
      line-height  24px

  // menu
  &__menu
    flex-grow  1
    padding-top 4px

  &-menu
    display  flex
    justify-content  space-between

    &__container
      width           150px
      display         flex
      flex-direction  column
      &_big
        width         260px

    &__link
      color fade-out(0.5)
      margin-bottom  20px

    &__title
      margin-bottom  21px

    &__title-sub
      margin-bottom  18px

    &__text
      line-height    24px

    &__subscription
      margin-top     23px

  // bottom-area
  &__bottom-area
    padding-left 2px
    box-shadow   0px 10px 20px fade-out(0.05)
    border-top   1px solid #E5E5E5

  &-bottom-area
    max-width     1161px
    margin        0 auto
    height        70px
    container()

  //
  // media //
  @media (max-width desktopWidth)
    &__top-area,
    &__bottom-area
      padding-right 15px
      padding-left  15px

  @media (max-width smDesktopWidth + 50px)
    &__top-area
      padding-top 70px
      padding-bottom 60px
      flex-direction  column

    &__represent
      width 100%
      margin-right 0

    &-represent
      container()
      flex-direction column
      padding-bottom   40px

      &__text
        max-width 500px
        text-align  center

    &__menu
      width 100%

    &-menu
      width 100%
      display       grid
      grid-gap      25px
      grid-template-columns   150px 260px
      grid-template-rows      1fr 1fr
      justify-content         space-evenly

  // footer-minimal
  @media (max-width  tableWidth)
    padding-top 20px
    min-height 367px

    &__menu,
    &-represent__text
      display none

    &__represent
      width 100%
      margin-right 0px

    &-represent
      container()
      flex-direction column
      padding-bottom 0px

    &__bottom-area
      border-top 0px
      box-shadow none

    &__top-area
      padding-bottom 0px
      box-shadow none

    &-bottom-area
      line-height 24px
      flex-direction column

      &__text
        text-align center