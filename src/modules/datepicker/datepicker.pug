include ../dropdown/dropdown

mixin datepicker(main, second=false)
  - const { title, placeholder, name, value } = main;
  - const dropdownIconClass = second ? '' : 'dropdown__icon_pad-top-3';

  +b.SECTION.datepicker-container&attributes(attributes)
    +e.main-field
      +e.title
        +b.H2.title._size-small= title

      +e.dropdown-wrapper
        +e.dropdown-container
          +b.INPUT.text-field._placeholder-dark.js-datepicker-field(
            type=type,
            placeholder=placeholder,
            name=name,
            value=value,
            autocomplete="off",
            spellcheck="false"
          )

          +e.I.dropdown-icon.material-icons keyboard_arrow_down

    if (second)
      - const { title, placeholder, name, value } = second;

      +e.second-field
        +e.title
          +b.H2.title._size-small= title

        +e.dropdown-wrapper
          +e.dropdown-container
            +b.INPUT.text-field._placeholder-dark.js-datepicker-field(
              type=type,
              placeholder=placeholder,
              name=name,
              value=value,
              autocomplete="off",
              spellcheck="false"
            )

            +e.I.dropdown-icon.material-icons keyboard_arrow_down
