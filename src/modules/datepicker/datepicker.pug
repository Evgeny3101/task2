include ../dropdown/dropdown


mixin datepicker()
  +b.datepicker-container
    +e.main-field
      +e.H3.title прибытие

      +dropdown({
        "type"  : "text",
        "place" : "ДД.ММ.ГГГГ"
      })(readonly="true").js-datepicker-main-field

    +e.second-field
      +e.H3.title выезд

      +dropdown({
        "type"  : "text",
        "place" : "ДД.ММ.ГГГГ"
      })(readonly="true").js-datepicker-second-field