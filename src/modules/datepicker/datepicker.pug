include ../dropdown/dropdown


mixin datepicker()
  +b.datepicker-container
    +e.main-field
      +e.title
        +b.H2.title_size-3 прибытие

      +e.dropdown-wrapper
        +dropdown({
          type : "text",
          place: "ДД.ММ.ГГГГ",
        })(readonly="true")._placeholder-dark.js-datepicker-main-field

    +e.second-field
      +e.title
        +b.H2.title_size-3 выезд

      +e.dropdown-wrapper
        +dropdown({
          type : "text",
          place: "ДД.ММ.ГГГГ",
        })(readonly="true")._placeholder-dark.js-datepicker-second-field