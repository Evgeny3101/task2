include ../text-field/text-field
include ../radio-button/radio-button
include ../toggle/toggle

mixin sign-up-menu
  +b.SECTION.sign-up-menu
    +e.wrapper
      +e.FORM.container
        +e.title-main
          +b.H1.title_size-1 Регистрация аккаунта

        +e.text-field
          +text-field('text', 'Имя')

        +e.text-field
          +text-field('text', 'Фамилия')

        +e.radio-buttons-container
          +e.radio-button
            +radio-button({ name: 'gender', id: 'male', text: 'Мужчина', checked: true })

          +e.radio-button
            +radio-button({ name: 'gender', id: 'female', text: 'Женщина', })

        +e.title
          +b.H2.title_size-3 дата рождения

        +e.date-birth
          +text-field('text', 'ДД.ММ.ГГГГ').js-date-birth-text-field(
            spellcheck='false'
          )

        +e.title
          +b.H2.title_size-3 данные для входа в сервис

        +e.text-field
          +text-field('email', 'Email')(autocomplete='email')

        +e.text-field
          +text-field('password', 'Пароль')(autocomplete='new-password')

        +e.toggle
          +toggle('Получать спецпредложения')

        +e.button-payment
          +b.BUTTON.button._regular._relative перейти к оплате
            +e.I.icon.material-icons arrow_forward

      +e.footer
        +e.text Уже есть аккаунт на Toxin
        +e.button-sign-in
          +b.A.button._transparent(href='sign-in.html') создать
