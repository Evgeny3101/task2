.sign-up
  width  380px
  height  646px
  background  default-color
  border  1px solid rgba(0, 0, 0, 0.12)
  box-shadow  0px 0px 25px rgba(0, 0, 0, 0.2)
  border-radius  4px

  &__wrapper
    padding 40px 29px

  &__title
    padding-bottom  19px

  &__container
    padding-bottom 10px

  &__radio-buttons
    display flex
    padding-bottom 10px

  &__button-payment
    height  44px
    margin-top  5.5px

  &__container-create
    padding-top 30px
    container()

  &__text
    padding-left  1px
    padding-bottom 2px
    color #000

  &__button-create
    height 44px
    width 99px










