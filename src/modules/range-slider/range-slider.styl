.range-slider
  font-size           12px
  width               266px

  &__header
    container(,normal)
    font-size         12px
    text-transform    uppercase
    margin            1px 0 18px

  &__label
    width             130px
    font-weight       bold
    margin-bottom     5.4px
    color             primary-color

  &__text
    margin-top       13.5px
    color             fade-out(0.5)

.prise-range
  color             fade-out(0.5)

  &__value
    white-space       pre
    text-align        right

.js-range-slider
  position            relative
  height              6px
  width               100%

  border              1px solid fade-out(0.25)
  border-radius       25px

  &__button
    position          absolute
    top               -6px

    width             16px
    height            16px
    z-index           1
    border            2px solid default-color
    border-radius     100%
    background        linear-gradient(180deg, #6FCF97 0%, #66D2EA 100%)
    cursor            pointer

    &_lift-up
      z-index: 10;

  &__interval
    position: absolute;
    height: 100%;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;

    .js-slider-interval
      background: #a7a9b4;
      width: 100%;
      height: 100%;


