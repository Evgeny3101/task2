@require '../../assets/js/libs/range-slider/range-slider.css'

.range-slider
  font-size           12px
  width               266px

  &__header
    container()
    font-size         12px
    text-transform    uppercase
    margin-bottom     23px

  &__title
    margin-top        1px

  &__text
    margin-top        13px
    color             fade-out(0.5)

  &__prise-range
    color             fade-out(0.5)
    white-space       pre
    text-align        right

  &__field
    display           none

// плагин
.rs-range-slider
  &__line
    height            8px
    border            1px solid fade-out(0.25)
    border-radius     3px

  &__button
    width             16px
    height            16px
    background        linear-gradient(secondary-gradient)
    
  &__interval
    height 6px


.rs-slider-interval
  background  linear-gradient(secondary-gradient)