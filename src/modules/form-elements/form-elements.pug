include ../module-title/module-title
include ../dropdown/dropdown
include ../subscription/subscription
include ../checkbox-item/checkbox-item
include ../radio-button/radio-button
include ../toggle/toggle
include ../like-button/like-button
include ../rate-button/rate-button
include ../range-slider/range-slider
include ../pagination/pagination
include ../menu-count/menu-count
include ../checkbox-list/checkbox-list
include ../rich-checkbox-item/rich-checkbox-item
include ../bullet-list/bullet-list
include ../item-info/item-info
include ../user-comment/user-comment

mixin form-elements
  +b.form-elements
    // rows 1
    +e.container_width-320._pb100
      +e.container_pb21
        +e.container_pb5
          +module-title('Text Field', 'Default')

        +e.email-field
          +e.INPUT.text-field(type="text", placeholder="Email")

      +e.container_pb20
        +e.container_pb5
          +module-title('Text Field', 'Hover / Focus')

          +e.INPUT.text-field-active(
            type="text",
            placeholder="Email",
            value="This is pretty awesome"
          )

      +e.container_pb22
        +e.container_pb5
          +module-title('Dropdown')

        +dropdown({ 'type' : 'button', 'value': 'Сколько гостей' })

      +e.container_pb40
        +e.container_pb5
          +module-title('masked text field')

        +e.INPUT.text-field.js-masked-text-field(
          type="text",
          placeholder="ДД.ММ.ГГГГ",
          spellcheck="false"
        )

      +e.container_pb40
        +e.date-dropdown
          +e.container_width-150
            +e.container_pb6
              +module-title('date Dropdown')

            +dropdown({ 'type' : 'text', 'placeholder': 'ДД.ММ.ГГГГ' })._placeholder-dark

          +e.container_width-150
            +e.container_pb6
              +module-title('date Dropdown')

            +dropdown({ 'type' : 'text', 'placeholder': 'ДД.ММ.ГГГГ', 'value': '19.08.2019' })._placeholder-dark

      +e.container_width-266
        +e.container_pb41
          +e.container_pb5
            +module-title('filter date dropdown')

          +dropdown({ 'type' : 'text', 'value': '19 авг - 23 авг.' })

        +e.container
          +e.container_pb5
            +module-title('subscription text field')

          +subscription({ type: 'email', placeholder: 'Email', name: 'subscription'})

    +e.container_width-266
      //-  Checkbox Buttons
      +e.container_pb17
        +module-title('Checkbox Buttons')
      +e.container_pb41._width-240
        +e.container_pb10
          +checkbox-item('Можно курить')
        +e.container_pb10
          +checkbox-item('Можно с питомцами')(checked)
        +e.container
          +checkbox-item('Можно пригласить гостей (до 10 человек)')(checked)

      //-  Radio Buttons
      +e.container_pb16
        +module-title('Radio Buttons')
      +e.container_pb41
        +e.radio-buttons
          +radio-button({ name: 'gender', id: 'male', text: 'Мужчина', checked: true })

          +radio-button({ name: 'gender', id: 'female', text: 'Женщина' })

      //-  Toggle
      +e.container_pb16
        +module-title('Toggle')
      +e.container_pb16
        +toggle('Получать спецпредложения')(checked)
      +e.container_pb46
        +toggle('Получать спецпредложения')

      //-  Like button
      +e.container_pb16
        +module-title('Like button')
      +e.container_pb40
        +e.like-buttons
          +like-button(2)
          +like-button(12).like-button_checked

      //-  Rate button
      +e.container_pb16
        +module-title('rate button')
      +e.container
        +e.rate-buttons
          +rate-button('4')
          +rate-button('5')

    +e.container
      //-  Range Slider
      +e.container_pb43
        +e.range-slider
          +range-slider('Range Slider')

      //-  Buttons
      +e.container_pb16
        +module-title('Buttons')
      +e.container_pb40
        +e.buttons-wrapper
          +e.buttons
            +e.button-container
              +e.BUTTON.button-regular(type="button") CLICK ME

            +e.button-container
              +e.BUTTON.button-regular-active(type="button") CLICK ME

            +e.button-container
              +e.BUTTON.button-transparent(type="button") CLICK ME

            +e.button-container
              +e.BUTTON.button-transparent-active(type="button") CLICK ME

          +e.text-buttons
            +e.text-button-container
              +e.BUTTON.button-regular-text(type="button") CLICK ME

            +e.text-button-container
              +e.BUTTON.button-fade-text(type="button") CLICK ME

          +e.with-icon
            +e.BUTTON.button-with-icon(type="button") перейти к оплате
              +e.I.button-icon.material-icons arrow_forward

      //-  Pagination
      +e.pagination
        +e.container_pb17
          +module-title('pagination')
        +e.container_width-240
          +pagination

    // rows 2
    +e.container_width-266
      +e.container_pb20
        +e.container_pb5
          +module-title('dropdown', 'default')

        +e.dropdown-menu
          +dropdown({ 'type' : 'text', 'placeholder': '2 спальни, 2 кровати...' })._placeholder-dark(
            readonly="readonly"
          )

      +e.container_pb167
        +e.container_pb5
          +module-title('dropdown', 'expanded')

        +e.menu-count
          +menu-count.js-menu-count

    +e.container
      //-  Dropdown, guest count
      +e.container_pb5
        +module-title('dropdown')

      +e.container
        +menu-count.js-menu-count

    +e.container
      //-  Dropdown, guest count
      +e.container_pb5
        +module-title('dropdown')
      +e.container
        +menu-count.js-menu-count

    // rows 3
    +e.container_width-266
      +e.container_pb24
        +e.checkbox-list
          +checkbox-list({title: 'expandable checkbox list', items: []})

      +e.container
        +e.checkbox-list
          +checkbox-list

    +e.container_pb201._mt-5
      +e.container_pb16
        +module-title('Rich Checkbox Buttons')

      +e.container
        +e.rich-checkbox-item1
          +rich-checkbox-item

        +e.rich-checkbox-item2
          - const richCheckboxItemConfig = require('../../modules/form-elements/config/rich-checkbox-item.json');

          +rich-checkbox-item(richCheckboxItemConfig)

    +e.container_mt-5
      //-  Bullet list
      +e.container_pb13
        +module-title('Bullet list')

      +e.container
        +bullet-list._mt-10

    // rows 4
    +e.container
      +e.item-info
        +item-info({ icon: 'insert_emoticon', title: 'Комфорт', text: 'Шумопоглощающие стены' })

      +e.item-info
        +item-info({ icon: 'location_city', title: 'Удобство', text: 'Окно в каждой из спален' })

    +e.user-comment
      +user-comment
