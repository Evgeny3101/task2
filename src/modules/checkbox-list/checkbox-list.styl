@require "../checkbox-item/checkbox-item"

.checkbox-list
  position        relative

  &__btn
    text-align      left
    width           100%
    margin-bottom   12px

  &__title
    width           210px
    margin-bottom   6px

  &__icon-up,
  &__icon-down
    position        absolute
    top             -4px
    right           10px
    color           fade-out(0.5)

  &__menu
    margin-right    auto
    display         none

  &__checkbox-item
    margin-bottom   10px






