@require '../checkbox-item/checkbox-item'

.checkbox-list
  position        relative

  &-button
    width 100%
    height 27px
    container()

    &__icon-up,
    &__icon-down
      padding-top   3px
      margin-right  10px

      font-weight   normal
      color         fade-out(0.5)

  &__menu
    margin-top      12px
    margin-right    auto
    display         none

    &.active
      display block

  &-menu
    &__checkbox-item
      margin-bottom   10px






