@require '../dropdown/dropdown'
@require './components/item-count'

.menu-count
  width   100%

  &__title
    margin-bottom  5px

  &__text-field
    position    relative
    width       100%


  // menu-count-dropdown
  &-dropdown
    position      absolute
    top           43px
    width         100%
    z-index       3
    visibility    hidden
    opacity       0
    transition    0.3s
    background    default-color
    box-shadow    0px 10px 20px fade-out(0.05)
    border        1px solid fade-out(0.5)
    border-bottom-left-radius   4px
    border-bottom-right-radius  4px

    &.current
      visibility      visible
      opacity         1

    &__wrapper
      padding         6px 6px 0 14px

    &__item
      padding-bottom  7px

    &__control-buttons
      padding-top     9px
      padding-bottom  7px
      container()

  // dropdown активен
  .count-active
    &.text-field
      border-color    fade-out(0.5)
      border-bottom-left-radius   0px
      border-bottom-right-radius  0px
