.button
  cursor: pointer
  height 100%
  width 100%
  container(space-around)
  border-radius: 22px
  line-height: 30px
  font-size: 12px
  text-transform: uppercase
  font-weight: bold

  &_transparent
    color: regular-color
    border: 2px solid regular-color

  &_regular
    padding-right: 4px
    color: default-color
    background linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%)

  &_transparent,
  &_regular
    &.active
      opacity: 0.5

  &_fade05
    color fade-out(0.5)

  &_blue
    color regular-color


  &_rel
    position relative

  &__icon
    position absolute
    right 5px
    width: 34px
    line-height: 44px


  &_default
    font-size: 14px
    color fade-out(0.5)
    text-transform: none
    font-weight: normal