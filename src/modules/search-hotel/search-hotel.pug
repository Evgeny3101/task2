include ../datepicker/datepicker
include ../menu-count/menu-count

mixin search-hotel
  +b.FORM.search-hotel
    +e.wrapper
      +e.title
        +b.H1.title_size-1 Найдём номера под ваши пожелания

      +e.datepicker
        +datepicker({ title: 'прибытие', placeholder: 'ДД.ММ.ГГГГ', name: 'arrival' }, { title: 'выезд', placeholder: 'ДД.ММ.ГГГГ', name: 'departure' }).js-datepicker-search-hotel

      +e.menu-count
        +menu-count({ title: 'гости', placeholder: 'Сколько гостей' }).js-menu-count-search-hotel

      +e.button
        +b.BUTTON.button_regular-big._relative Подобрать номер
          +e.I.icon.material-icons arrow_forward
