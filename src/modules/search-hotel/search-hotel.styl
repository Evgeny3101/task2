@require '../datepicker/datepicker'
@require '../menu-for-count/menu-for-count'


.search-hotel
  width  380px
  background default-color
  border  1px solid rgba(0, 0, 0, 0.12)
  box-shadow  0px 0px 25px rgba(0, 0, 0, 0.2)
  border-radius  4px

  &__wrapper
    padding 38.5px 29px 29px

  &__datepicker
    margin-top 22px

  &__title-menu
    margin-top 20px

  &__menu-for-count
    margin-top  20px

  &__button
    margin-top 31px
    height  44px

    .button
      padding-right  3px


  .menu-for-count
    .text-field
      padding-top 2px
    .dropdown__icon
      padding-top 2px

  .datepicker-container
    .text-field
      padding-bottom 4px


