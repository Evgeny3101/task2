@require '../datepicker/datepicker'
@require '../menu-count/menu-count'

.search-hotel
  width  380px
  background default-color
  border  1px solid rgba(0, 0, 0, 0.12)
  box-shadow  0px 0px 25px rgba(0, 0, 0, 0.2)
  border-radius  4px

  &__wrapper
    padding 38.5px 29px 29px

  &__datepicker
    margin-top 22px
    
    @media  (max-width smPhoneWidth)  
      .dropdown__icon 
        display none

    @media  (max-width  phoneWidth)
      .text-field
        padding 0px 8px 2px
      
  &__menu-count
    margin-top  20px

  &__datepicker,
  &__menu-count
    @media (min-width smPhoneWidth) and (max-width  phoneWidth)
      .dropdown__icon 
        width 30px
    
  &__button
    margin-top 31px
    height  44px

    .button
      padding-right  3px
