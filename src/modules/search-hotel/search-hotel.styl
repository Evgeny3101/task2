@require '../date-fields/date-fields'
@require '../menu-count/menu-count'

.search-hotel
  width  380px
  background default-color
  border  1px solid rgba(0, 0, 0, 0.12)
  box-shadow  0px 0px 25px rgba(0, 0, 0, 0.2)
  border-radius  4px

  &__wrapper
    padding 38.5px 29px 29px

  &__title
    title-style('large')

  &__datepicker
    margin-top 22px
    
  &__menu-count
    margin-top  20px

  &__button-wrapper
    margin-top 31px
    height  44px
    
  &__button
    button('regular', true)
    padding-right  3px

  @media (max-width phoneWidth)
    width 100%
    padding 0 10px