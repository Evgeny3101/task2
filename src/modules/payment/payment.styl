@require '../datepicker/datepicker'
@require '../menu-count/menu-count'
@require '../hotel-price/hotel-price'
@require '../price-list/price-list'


.payment
  border            1px solid rgba(0, 0, 0, 0.12)
  box-shadow        0px 0px 25px rgba(0, 0, 0, 0.2)
  border-radius     4px
  background        default-color

  &__wrapper
    padding         40px 0 29px

  &__hotel-item-price,
  &__datepicker,
  &__menu-count,
  &__price-list,
  &__button
    padding-left 29px
    padding-right 29px

  //
  &__hotel-item-price
    container()
    color           fade-out(0.5)

  //
  &__datepicker
    margin-top      20px

  //
  &__menu-count
    margin-top      20px

    .dropdown__icon
      padding-top   0px

  @media  (max-width phoneWidth)
    &__datepicker,
    &__menu-count
      .dropdown__icon 
        width 35px
      
      .text-field
        padding-left 10px

  //
  &__price-list
    margin-top      20px
    margin-left     1px

  // payment-total
  &__total
    padding-left 30px
    padding-right 20px
    margin-top 15px

  &-total
    display         flex
    font-size       19px
    font-weight     bold
    color           primary-color

    &__line
      height          18px
      flex-grow       1
      margin          0 3px
      border-bottom   1px dotted fade-out(0.25)

    &__number
      font-size       19px

  // button apply
  &__button
    margin-top      20px
    height          44px
