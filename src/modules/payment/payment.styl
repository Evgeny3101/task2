@require "../datepicker/datepicker"
@require "../menu-for-count/menu-for-count"
@require "../hotel-item-price/hotel-item-price"


.payment
  width             380px
  border            1px solid rgba(0, 0, 0, 0.12)
  box-shadow        0px 0px 25px rgba(0, 0, 0, 0.2)
  border-radius     4px
  background        default-color

  &__wrapper
    padding         43px 29px 29px 29px

  //
  &__hotel-item-price
    container()
    color           fade-out(0.5)

    .room-number__number
      margin-left   1px
      font-size     22px

    .hotel-item-price__price-per-day
      margin-top    2px

    .price-per-day__price
      padding-right 3px

  //
  &__datepicker
    margin-top      19px

  //
  &__menu-for-count
    margin-top      20px

    .dropdown__icon
      padding-top   0px

  //
  &__price-list
    margin-top      20px
    margin-left     1px

  .price-list
    display           flex
    flex-direction    column

    .item
      display         grid
      grid-template-columns  auto 20px 80px
      margin-bottom  15px

      &__sum
        text-align      right

      &__text
        &_without-info
          grid-column     1/3

      &__info
        width           20px
        height          20px
        text-align      center
        color           fade-out(0.25)
        border          1px solid fade-out(0.25)
        border-radius   100%

    //
    &__total
      margin-top      16px

    .total
      display         flex
      font-size       19px
      font-weight     bold
      color           primary-color

      &__line
        height          18px
        flex-grow       1
        margin          0 3px
        border-bottom   1px dotted fade-out(0.25)

      &__number
        padding-top     1px
        font-size       18px
        letter-spacing  -0.6px

  //
  &__button
    margin-top      20px
    height          44px
