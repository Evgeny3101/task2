@require '../datepicker/datepicker'
@require '../menu-for-count/menu-for-count'
@require '../hotel-item-price/hotel-item-price'


.payment
  border            1px solid rgba(0, 0, 0, 0.12)
  box-shadow        0px 0px 25px rgba(0, 0, 0, 0.2)
  border-radius     4px
  background        default-color

  &__wrapper
    padding         40px 0 29px

  &__hotel-item-price,
  &__datepicker,
  &__menu-for-count,
  &__price-list,
  &__button
    padding-left 29px
    padding-right 29px

  //
  &__hotel-item-price
    container()
    color           fade-out(0.5)

  //
  &__datepicker
    margin-top      20px

  //
  &__menu-for-count
    margin-top      20px

    .dropdown__icon
      padding-top   0px

  //
  &__price-list
    margin-top      20px
    margin-left     1px

    .price-list
      display           flex
      flex-direction    column

      .item
        display         grid
        grid-template-columns  auto 20px 80px
        margin-bottom  15px

        &__sum
          text-align      right

        &__text
          &_without-info
            grid-column     1/3

        &__info
          width           20px
          height          20px
          text-align      center
          color           fade-out(0.25)
          border          1px solid fade-out(0.25)
          border-radius   100%

  //
  &__total
    padding-left 30px
    padding-right 20px
    margin-top 15px

    .total
      display         flex
      font-size       19px
      font-weight     bold
      color           primary-color

      &__line
        height          18px
        flex-grow       1
        margin          0 3px
        border-bottom   1px dotted fade-out(0.25)

      &__number
        font-size       19px

  //
  &__button
    margin-top      20px
    height          44px
