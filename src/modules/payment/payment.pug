include ../datepicker/datepicker
include ../menu-count/menu-count
include ../hotel-price/hotel-price
include ../price-list/price-list

mixin payment(config=false)
  - if (!config) config = require('../../modules/payment/payment.json');
  - const { hotelPrice, datepicker, menuCount } = config;

  +b.FORM.payment
    +e.wrapper
      +e.hotel-item-price
        +hotel-price(hotelPrice)

      +e.datepicker
        +datepicker(datepicker[0], datepicker[1]).js-datepicker-payment

      +e.menu-count
        +menu-count(menuCount).js-menu-count-payment

      +e.price-list
        +price-list

      +e.total
        +b.payment-total
          +e.title
            +b.H2.title_size-2 Итого
          +e.line
          +e.STRONG.number 38 081₽

      +e.button
        +b.BUTTON.button._regular-big._relative забронировать
          +e.I.icon.material-icons arrow_forward
