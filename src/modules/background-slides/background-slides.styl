.background-slides
  position relative
  width 100%
  height 100%

  &__img
    width 100%
    z-index 0
    position absolute
    opacity 0
    animation anim_slides 12s linear infinite 0s

  :nth-child(2)
    animation-delay 6.0s

  @keyframes anim_slides {
    0% {opacity: 0;}
    10% {opacity: 1;}
    40% {opacity: 1;}
    50% {opacity: 0;}
    100% {opacity: 0;}
  }