@require "../rate-button/rate-button"
@require "../hotel-item-price/hotel-item-price"


.hotel-item
  width               270px
  background          default-color
  display             flex
  flex-direction      column
  font-weight         bold
  color               fade-out(0.5)

  &__gallery
    height            151px
    width             270px

  &__price
    padding           22px 16px 13px 20.5px

  &__review
    padding           8px 19px 14px 21px

  &__line
    width             230px
    border-bottom     1px solid fade-out(0.1)
    margin-left       20px


.hotel-item-review
  width             100%
  container()

  &__text
    padding-bottom  3px

  &__text-rating
    font-weight     normal
    padding-left    4px


//  slider
.images-slider
  position            relative
  overflow            hidden
  height              100%
  width               100%

  .container-images
    border-top-left-radius  4px
    border-top-right-radius 4px
    width             270px
    height            151px
    background      #777

    &__image
      position          absolute
      visibility        hidden
      opacity           0
      transition        0.3s

      &.image-current
        position    top
        visibility  visible
        opacity     1


  .switch-arrows
    &__next,
    &__prev
      padding             10px 7px
      position            absolute
      top                 50px
      font-size           24px

    &__next
      right               0
      transform           rotate(-90deg)

    &__prev
      left                0
      transform           rotate(90deg)

    &__icon
      color             default-color


  .control
    position            absolute
    bottom              15px
    right               15px
    display             flex

    &__button
      margin-left       3.75px
      height            7.5px
      width             7.5px
      border            1px solid default-color
      box-shadow        0px 5px 5px fade-out(, 0.3)
      border-radius     25px

      &.circle-current
        background      default-color