@require "../rate-button/rate-button"


.hotel-item
  background: default-color
  display: flex
  flex-direction: column
  font-weight: bold
  color fade-out(0.5)
  width 270px

  &__gallery
    height 151px
    width: 270px

  &-room-price
    padding 22px 16px 13px 20.5px

  &-review
    padding 8px 19px 14px 21px

  &__line
    border-bottom: 1px solid fade-out(0.1)
    width: 230px
    margin-left: 20px


  .room-price, .review
    width: 100%
    container()


  .room-price
    font-weight: bold
    color fade-out(0.5)

    &__icon
      color primary-color
      font-size: 14px
      padding-right: 5px

    &__number
      color primary-color
      font-size: 17px
      padding-right: 5px

    &__room-class
      display none
      color regular-color
      font-weight: bold
      font-size: 12px
      text-transform: uppercase
      &_visible
        display inline

    &__price
      display inline-block
      margin-top: 2px
      font-size: 14px
      padding-right: 4px

    &__text-price
      font-weight: normal
      padding-left: 1px
      font-size: 12px

  .review
    &__text
      padding-bottom: 3px

    &__text-rating
      font-weight: normal
      padding-left: 4px


//  slader
.gallery-slader
  position: relative
  height: 100%
  width: 100%
  overflow hidden
  &__img
    width: 270px
    height 151px
    border-top-left-radius: 4px
    border-top-right-radius: 4px
    display: none
    &.curry
      display: block
  // &__control-deactive
  //   display none

& .slader-prev,
& .slader-next
  padding 10px 7px
  position: absolute
  top 50px
  color default-color
  font-size: 24px
& .slader-next
  right 0
  transform: rotate(-90deg)
& .slader-prev
  left 0
  transform: rotate(90deg)


.control
  position absolute
  bottom: 15px
  right 15px
  display: flex
  &__circle
    margin-left: 3.75px
    height 7.5px
    width 7.5px
    border: 1px solid default-color
    box-shadow: 0px 5px 5px fade-out(, 0.3)
    border-radius: 25px
    &.circle-curry
      background default-color