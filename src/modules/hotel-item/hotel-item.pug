include ../rate-button/rate-button
include ../hotel-item-price/hotel-item-price

mixin hotel-item(data)

  +b.hotel-item
    +b.images-slider.js-images-slider
      +b.switch-arrows
        +e.BUTTON.prev
          +e.I.icon.material-icons expand_more
        +e.BUTTON.next
          +e.I.icon.material-icons expand_more

      +b.container-images
        +e.IMG(src=data.src).image.image-current
        +e.IMG(src=data.src2).image
        +e.IMG(src=data.src3).image
        +e.IMG(src=data.src4).image

      +b.control
        +e.BUTTON.button.circle-current
        +e.BUTTON.button
        +e.BUTTON.button
        +e.BUTTON.button

    +e.price
      +hotel-item-price({
        number: data.number,
        lux: data.lux,
        price: data.price
      })

    +e.line

    +e.review
      +b.hotel-item-review
        +rate-button(data.stars)

        +e.text
          span= data.rating
          +e.SPAN.text-rating Отзывов