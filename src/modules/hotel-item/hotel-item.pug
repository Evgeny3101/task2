include ../rate-button/rate-button
include ../hotel-price/hotel-price
include ../images-slider/images-slider

mixin hotel-item(config=false)
  - if (!config) config = require('../../modules/hotel-item/hotel-item.json');
  - const { srcArr, number, isLux, price, stars, reviews } = config;

  +b.SECTION.hotel-item
    +e.images-slider
      +images-slider(srcArr)

    +e.hotel-price
      +hotel-price({ number, isLux, price })

    +e.room-rating
      +e.room-rating-container
        +e.rate-button
          +rate-button(stars)

        +e.reviews-wrapper
          +e.SPAN.reviews-number= reviews
          +e.SPAN.text Отзывов
