.rich-checkbox-item
  cursor pointer
  display grid
  grid-template-columns 20px auto
  grid-gap 10px

  &__input
    display none

    &:checked ~ .rich-checkbox-item__box
      border 1px solid regular-color

      &:after
        border-right 2px solid regular-color
        border-bottom 2px solid regular-color
        border-image linear-gradient(primary-gradient)
        border-image-slice 1

  &__container
    display flex
    flex-direction column

  &__box
    position relative
    display block
    width 20px
    height 20px
    border 1px solid fade-out(0.25)
    border-radius 4px
    margin-right 10px

    &:after
      content ''
      position absolute
      width 6px
      height 8px
      top 4px
      left 6px
      transform rotate(45deg)

  &__title
    line-height 20px

  &__text
    padding-top 6px
    line-height 14px
    font-size 12px
    color fade-out(0.5)
