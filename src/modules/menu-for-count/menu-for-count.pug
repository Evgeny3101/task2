include ../dropdown/dropdown

mixin menu-for-count(config)
  +b.menu-for-count
    if(config.title)
      +e.title
        +b.H2.title_size-3= config.title

    +e.text-field(class= config.class)
      +dropdown({
        "type" : "text",
        "place": config.placeholder,
        "value": config.value
      })(readonly="true")._placeholder-dark
