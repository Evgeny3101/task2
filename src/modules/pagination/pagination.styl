.pagination
  width 100%
  display flex
  flex-direction column
  color fade-out(0.5)

  &__list
    container()

  &__text
    margin 0 auto
    padding-top 10px
    color fade-out()
    font-size  14px

  &__number
    color fade-out(0.5)
    font-size 12px
    cursor pointer
    width 40px
    height 40px
    container(space-around)

    &_switch
      color default-color
      background linear-gradient(primary-gradient)
      border-radius 22px

    &_current
      color default-color
      padding 0 8px
      background linear-gradient(secondary-gradient)
      border-radius 22px

  &__icon
    font-size 24px