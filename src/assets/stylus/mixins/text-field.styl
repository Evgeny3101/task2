text-field()
  width 100%
  height 44px
  line-height 44px
  padding 0 14px 2px 
  font-size 14px
  color fade-out(0.75)
  border 1px solid fade-out(0.25)
  border-radius 4px
  text-align left
  text-overflow ellipsis 
  white-space nowrap
  overflow hidden
  cursor text  

  &[type='button']
    cursor pointer

  &:focus,
  &:hover
    border 1px solid fade-out(0.5)

  &::placeholder
    color fade-out(0.25)

  @media (max-width 375px)
    padding 0px 10px    