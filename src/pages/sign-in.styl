@require "../layout/main"

//- modules
@require "../modules/login-card/login-card"

.sign-in
  position          relative
  height            684px
  max-width         1440px
  margin            0 auto
  overflow          hidden

  &__background-image
    width           100%
    z-index         -1
    top             -70px
    position        absolute

  &__login-card
    height          100%
    display         flex
    align-items     center
    justify-content space-around


// media //

.sign-in
  @media  (max-width lDesktopWidth)
    height          0px
    padding         23.5% 0 24%
  @media  (min-width tableWidth + 1px) and (max-width  smDesktopWidth)
    min-height      440px
  @media  (max-width tableWidth)
    height          380px
    padding         0

  &__login-card
    @media  (max-width phoneWidth)
      align-items   flex-start

  &__background-image
    @media  (max-width smDesktopWidth)
      top           0
    @media  (max-width 820px)
      width         820px
    @media  (max-width phoneWidth)
      display       none


  .login-card
    @media  (max-width phoneWidth)
      width        100%













