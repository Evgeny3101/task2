include ../modules/checkbox-list/checkbox-list
include ../modules/hotel-item/hotel-item
include ../modules/pagination/pagination


block head
  +head({
    "title": "Toxin - Search Room"
  })

block content
  +b.MAIN.room-search
    +e.wrapper.wrapper
      +e.ASIDE.room-filter
        +b.FORM.room-filter

          +e.date-picker-field
            +e.H3.title даты пребывания в отеле
            +dropdown({
              "type" : "text",
              "place": "ДД.ММ - ДД.ММ",
              "value": "19 авг - 23 авг"
            })(readonly="true").js-datepicker-main-field

          +e.menu-for-count
            +e.H3.title гости
            +b.menu-for-count.js-menuForCountGuest
              +dropdown({
                "type" : "text",
              })(readonly="true")

          +e.range-slider
            +range-slider("диапазон цены", "Стоимость за сутки пребывания в номере")

          +e.checkbox-items
            +b.checkbox-items
              +e.H3.title правила дома
              +e.checkbox-item
                +checkbox-item('Можно курить')

              +e.checkbox-item
                +checkbox-item('Можно с питомцами')(checked)

              +e.checkbox-item
                +checkbox-item('Можно пригласить гостей (до 10 человек)')(checked)

          +e.rich-checkbox-items
            +b.rich-checkbox-items
              +e.H3.title Доступность
              +e.rich-checkbox-item._w230
                +rich-checkbox-item(
                  /*  title  */
                  "Широкий коридор",
                  /*  text  */
                  "Ширина коридоров в номере не менее 91 см.")

              +e.rich-checkbox-item._w260
                +rich-checkbox-item(
                  /*  title  */
                  "Помощник для инвалидов",
                  /*  text  */
                  "На 1 этаже вас встретит специалист и проводит до номера.")

          +e.menu-for-count
            +e.H3.title удобства номера
            +b.menu-for-count.js-menuForCount
              +dropdown({
                "type" : "text",
              })(readonly="true")

          +e.checkbox-list
