//- layout
extends ../../layout/supporting

//- local mixins
mixin label-icon
  +b.FIGURE.label-icon
    +e.A.link(href='nav.html')
      +e.IMG.img(src='assets/img/ui-kit-icon.svg', alt='иконка сайта')

mixin color-demo(title, hex, mod)
  +b.color-demo
    +e.demo(class=mod)
    +e.text-container
      +e.SPAN.title= title
      +e.SPAN.hex= hex

mixin module-title(title, comment=false)
  +b.module-title
    +e.title
      +b.H2.title_size-3= title
    if (comment)
      +e.comment
        +e.SPAN.text= comment

