@require "../layout/main"

@require "../modules/sign-up/sign-up.styl"

.sign-up-main
  position        relative
  height          702px
  max-width       1440px
  margin          0 auto
  overflow        hidden


  // background
  &__bg-img
    width        100%
    z-index      -1
    top          -70px
    position     absolute


  // content main
  &__wrapper
    padding-top  4px
    height 100%
    container(space-around)



// media //


.sign-up-main
  &__wrapper
    @media  (max-width  phoneWidth)
      height       660px

      &.wrapper
        padding  0


  // background
  &__bg-img
    @media  (max-width  1310px)
      top           0
      width         1310px
    @media  (max-width  phoneWidth)
      display       none


  // content main
  &__wrapper
    @media  (max-width  phoneWidth)
      align-items     flex-start


  .sign-up
    @media  (max-width  phoneWidth)
      width        100%







