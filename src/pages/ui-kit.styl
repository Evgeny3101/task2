@require "../layout/supporting.styl"



.ui-kit
  &__page
    background default-color
    margin  50px 0 150px
    padding-bottom 125px
    // &_bg-gray
    //   background #F4F4F6

  // label
  &__label-icon
    padding-top  30px
    padding-left 30px

    .label-icon
      width 60px
      height 60px

      &__img
        width 48px
        height 48px

  // page 1
  &__ui-kit-page1
    max-width 1140px
    margin 55px auto 0

    .ui-kit-page1
      display flex
      justify-content space-between

      &__container-colors,
      &__container-titles
        display flex
        flex-direction  column
        width 447px

      &__color-demo
        margin-bottom 20px

    // mixin color-demo
    .color-demo
      display flex

      &__text-container
        margin-top  10px

      &__title
        line-height  24px
        font-family  secondFont
        font-size    19px
        font-weight  bold
        color fade-out(0)

      &__hex
        margin-top  4px
        font-size   19px

      &__demo
        height 70px
        width 70px
        border-radius  6px
        background  fade-out(0)
        margin-right  40px

        &_fade075
          background  fade-out()

        &_fade05
          background  fade-out(0.5)

        &_fade025
          background  fade-out(0.25)

        &_fade005
          background  fade-out(0.05)

        &_regular
          background  fade-out(0, regular-color)

        &_second
          background  fade-out(0, secondary-color)

    //
    .title-demo
      display grid
      grid-template-columns  40px auto
      grid-gap  50px 30px
      font-weight  normal
      color fade-out(0.25)


      &__container
        width 40px
        text-align  right
        margin-right  20px

      &__demo-h1
        font-size  24px
        line-height  29px

      &__demo-h2
        font-size  19px
        line-height  23px

      &__demo-h3
        font-size  12px
        line-height  15px

      &__body
        margin-top  -3px
        width 302px
        line-height  24px
        color fade-out()

