@require "../layout/supporting.styl"



.ui-kit
  &__page
    background default-color
    margin: 50px 0
    &_bg-gray
      background #F4F4F6

.label-icon
  width 60px
  height 60px
  padding: 30px 0 0 30px

  &__img
    width 48px
    height 48px

//
//
// page1
//
//
.ui-kit-page1
  height 840px
  padding: 85px 10px 0
  display flex

  &__container-colors,
  &__container-titles
    display flex
    flex-direction: column

  &__container-colors
    width 693px

  //

  .color-demo
    display flex
    margin-bottom 20px

    &__text
      padding-top: 9px
      width 160px

    &__title
      line-height: 24px
      font-family: secondFont
      font-size: 19px
      font-weight: bold
      color fade-out(0)
      letter-spacing: -0.4px

    &__hex
      padding-top: 6px
      font-size: 19px
      letter-spacing: -0.5px

    &__demo
      height 70px
      width 70px
      border-radius: 6px
      background: fade-out(0)
      margin-right: 40px

      &_fade075
        background: fade-out()

      &_fade05
        background: fade-out(0.5)

      &_fade025
        background: fade-out(0.25)

      &_fade005
        background: fade-out(0.05)

      &_regular
        background: fade-out(0, regular-color)

      &_second
        background: fade-out(0, secondary-color)

  //

  .title-demo
    width 410px
    display grid
    grid-template-columns: 40px auto
    grid-gap: 50px 30px
    font-weight: normal
    color fade-out(0.25)


    &__container
      width 40px
      text-align: right
      margin-right: 20px

    &__demo-h1
      font-size: 24px
      line-height: 29px

    &__demo-h2
      font-size: 19px
      line-height: 23px

    &__demo-h3
      font-size: 12px
      line-height: 15px

    &__body
      margin-top: -3px
      width 302px
      line-height: 24px
      color fade-out()
//
//
// page 2
//
//
.ui-kit-page2
  height 1793px
  padding: 83px 0 0 1px

  display: grid
  grid-template-columns: 320px auto
  grid-gap: 0 126px

  &__column1
    width: 320px
    padding-right: auto

  &__column1_2
    width: 266px
    padding-right: auto
    & .dropdown-menu-count__container-btn
      display none

  &__column2-3
    display: grid
    grid-template-columns: 320px 320px
    grid-template-rows: 733px 697px auto
    grid-gap: 0 72px

  &__container-reviews
    grid-column: 1/3


  &__container
    &-pb5
      padding-bottom: 5px
    &-pb10
      padding-bottom: 10px
    &-pb13
      padding-bottom: 13px
    &-pb14
      padding-bottom: 14px
    &-pb15
      padding-bottom: 15px
    &-pb16
      padding-bottom: 16px
    &-pb17
      padding-bottom: 17px
    &-pb19
      padding-bottom: 19px
    &-pb20
      padding-bottom: 20px
    &-pb21
      padding-bottom: 21px
    &-pb22
      padding-bottom: 22px
    &-pb31
      padding-bottom: 31px
    &-pb35
      padding-bottom: 35px
    &-pb40
      padding-bottom: 40px
    &-pb41
      padding-bottom: 41px
    &-pb44
      padding-bottom: 44px
    &-pb45
      padding-bottom: 45px
    &-pb48
      padding-bottom: 48px
    &-pb48
      padding-bottom: 48px
    &-pb100
      padding-bottom: 100px
    &-pb170
      padding-bottom: 170px
    &-pb256
      padding-bottom: 256px

  //
  // column1
  //
  &__block-wrapper
    padding: 5px 0 0

  .module-title
    display flex

    &__title
      flex-grow 1

    &__comment
      font-size: 12px
      color fade-out(0.5)
      text-align: right
      text-transform: uppercase
      letter-spacing: -0.1px
      word-spacing: -1px


  &__container-date-dropdown
    display grid
    grid-template-columns: 150px 150px
    grid-gap 0 20px


  .checkbox-list1
    position relative
    &__icon-down
      position: absolute
      top 0
      right 10px
      color fade-out( 0.5)


  .checkbox-list
    &__icon-down
      display none

  //
  // column2
  //
  &__checkbox-item
    margin-bottom: 10px
    padding-right: auto
    width 230px


  &__container-like-buttons
    display flex
    justify-content space-between
    width 89px


  &__container-rate-button
    display flex
    justify-content space-between
    width 260px

  //
  // column3
  //
  &__container-range-slider
    width 266px


  .button-ui-kit
    &__container
      container()
      width 217px

    &__wrapper
      height 44px
      width 99px
      margin: 0 0 30px

    &__wrapper-two-item
      margin: -7px 0 23px

      width 142px
      display flex
      justify-content space-between

      .button
        width: 61px


    &__wrapper-to-pay
      height 44px
      width 320px

  //
  // column4
  //
  &__column4
    .dropdown-menu-count
      .clear
        display: none

  &__rich-checkbox-item1
    width 230px
    padding-bottom: 10px

  &__rich-checkbox-item2
    width 260px
