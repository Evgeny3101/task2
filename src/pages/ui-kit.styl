// page 3
//
//
.ui-kit-page3
  height 1200px
  width 100%
  margin-top: 89px

  display: grid
  grid-template-columns: 380px 380px auto
  grid-gap: 0 40px

  &__column
    display: grid
    grid-template-rows: minmax( min-content, min-content ) minmax( min-content, min-content ) minmax( min-content, min-content )
    grid-gap: 40px 0
