.ui-kit-page4
  height 1200px
  width 100%
  margin-top: 89px

  &__container
    padding 0 0 40px
    box-shadow: 0px 10px 20px fade-out(0.05)

  .auth
    &__button-login
      height 34px
      width 79px

    &__button-sign-up
      height 34px
      width 101px





