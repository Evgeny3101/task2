@require "../layout/main"

//- modules
@require "../modules/search-hotel/search-hotel"
@require "../modules/background-slides/background-slides"


.landing-main
  position      relative
  height        830px
  max-width     1440px
  margin        0 auto
  overflow      hidden

  @media screen and (max-width: lDesktopWidth) and (min-width  desktopWidth)
    height        730px
  @media screen and (max-width: desktopWidth)
    height        600px
  @media screen and (max-width: 850px)
    height        520px
  @media screen and (max-width: tableWidth)
    height        400px



  & .background-slides
    @media screen and (max-width: tableWidth)
      display     none



  &__container-search-hotel
    width 100%
    position      absolute
    top           70px
    left          140px
    @media screen and (max-width: smDesktopWidth)
      top           50px
      left          50px
    @media screen and (max-width: tableWidth)
      top           0
      left          0


  & .search-hotel
    @media screen and (max-width: tableWidth)
      width 100%

  & .date-dropdown
    @media screen and (max-width: tableWidth)
      width 100%
      grid-template-columns: auto auto



  &__container-offer
    position      absolute
    bottom        20px
    right         134px

    @media screen and (max-width: smDesktopWidth)
      top         420px
      right       90px
    @media screen and (max-width: 850px)
      top           50px
      right         50px

  & .offer
    height        48px
    width         265px
    text-align    right
    line-height   24px
    color         fade-out()








