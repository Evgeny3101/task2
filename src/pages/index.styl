@require "../layout/main"

@require "../modules/search-hotel/search-hotel"
@require "../modules/background-slides/background-slides"


.landing-page
  position      relative
  height        830px
  max-width     1440px
  margin        0 auto
  overflow      hidden

  .background-slides
    &__img
      animation-duration: 18s;

    :nth-child(3)
      animation-delay  12.0s

    @keyframes anim_slides {
      0% {opacity: 0;}
      4% {opacity: 1;}
      28% {opacity: 1;}
      32% {opacity: 0;}
      100% {opacity: 0;}
    }


  // search-hotel
  &__search-hotel
    width 100%
    position      absolute
    top           70px
    left          140px


  // welcome text
  &__welcome-text
    position      absolute
    bottom        20px
    right         134px


  .welcome-text
    height        48px
    width         265px
    text-align    right
    line-height   24px
    color         fade-out()


// media //
.landing-page
  @media  (max-width  lDesktopWidth)
    height          0px
    padding         0 0 47.5%
    margin-bottom   30px
  @media  (max-width  smDesktopWidth)
    min-height      500px
  @media  (max-width  tableWidth)
    height          400px


  .background-slides__img
    @media  (max-width  868px)
      width      868px
    @media  (max-width  tableWidth)
      display     none


  &__search-hotel
    @media  (max-width  smDesktopWidth)
      top           50px
      left          50px
    @media  (max-width  tableWidth)
      top           0
      left          0


  .search-hotel
    @media  (min-width  phoneWidth + 1px) and (max-width  tableWidth)
      width       100%
      padding     0 30px
    @media  (max-width  phoneWidth)
      width       100%
      padding     0px

  &__welcome-text
    @media  (max-width  smDesktopWidth)
      right         50px
    @media  (max-width  tableWidth)
      display     none










