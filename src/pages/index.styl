@require "../layout/main"

//- modules
@require "../modules/search-hotel/search-hotel"
@require "../modules/background-slides/background-slides"


.landing-main
  position      relative
  height        830px
  max-width     1440px
  margin        0 auto
  overflow      hidden


  // search-hotel
  &__container-search-hotel
    width 100%
    position      absolute
    top           70px
    left          140px


  // offer
  &__container-offer
    position      absolute
    bottom        20px
    right         134px


  & .offer
    height        48px
    width         265px
    text-align    right
    line-height   24px
    color         fade-out()


// media //


.landing-main
  @media  (max-width: lDesktopWidth)
    height          0px
    padding         0 0 47.5%
    margin-bottom   30px
  @media  (max-width: smDesktopWidth)
    min-height      500px
  @media  (max-width: tableWidth)
    height          400px


  & .background-slides__img
    @media  (max-width: 868px)
      width      868px
    @media  (max-width: tableWidth)
      display     none


  &__container-search-hotel
    @media  (max-width: smDesktopWidth)
      top           50px
      left          50px
    @media  (max-width: tableWidth)
      top           0
      left          0


  & .search-hotel
    @media  (min-width: phoneWidth + 1px) and (max-width: tableWidth)
      width       100%
      padding     0 30px
    @media  (max-width: phoneWidth)
      width       100%
      padding     0px


  & .date-dropdown
    @media  (max-width: tableWidth)
      width       100%
      grid-template-columns: auto auto


  &__container-offer
    @media  (max-width: smDesktopWidth)
      right         50px
    @media  (max-width: tableWidth)
      display     none










