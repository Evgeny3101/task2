@require '../../layout/main'

@require '../../modules/sign-in-menu/sign-in-menu'
@require '../../modules/background-slides/background-slides'


.page__content
  display flex
  justify-content space-around

.sign-in-page
  max-width 1440px
  max-height 702px
  width 100%
  height 58vw
  overflow hidden
    
  &__background-slides
    position relative
    top -70px
    z-index -1

    @media (min-width phoneWidth + 1px) and (max-width lDesktopWidth)
      top -150px
      width 1440px

    @media (max-width phoneWidth)
      display none

  &__sign-in-menu
    height 100%
    container(space-around)

  @media (min-width phoneWidth + 1px) and (max-width lDesktopWidth)
    height 600px

  @media (max-width phoneWidth)
    height auto
    overflow visible
