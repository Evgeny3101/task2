@require "../layout/main"

//- modules
@require "../modules/login-card/login-card"

.login-main
  position        relative
  height          684px
  max-width       1440px
  margin          0 auto
  overflow        hidden


  // background
  &__bg-img
    width        100%
    z-index      -1
    top          -70px
    position     absolute


  // content main
  &__wrapper
    height          100%
    display         flex
    align-items     center
    justify-content space-around


// media //


.login-main
  @media  (max-width  lDesktopWidth)
    height          0px
    padding         23.5% 0 24%
  @media  (min-width  tableWidth + 1px) and (max-width  smDesktopWidth)
    min-height      440px
  @media  (max-width  tableWidth)
    height          380px
    padding         0


  &__wrapper
    @media  (max-width  phoneWidth)
      align-items   flex-start

      &.wrapper
        padding  0


  &__bg-img
    @media  (max-width  smDesktopWidth)
      top           0
    @media  (max-width  820px)
      width         820px
    @media  (max-width  phoneWidth)
      display       none


  .login-card
    @media  (max-width  phoneWidth)
      width        100%













