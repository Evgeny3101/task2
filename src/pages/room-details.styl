@require '../layout/main'

//- modules
@require '../modules/item-info/item-info'
@require '../modules/bullet-list/bullet-list'
@require '../modules/user-comment/user-comment'
@require '../modules/payment/payment'
@require '../modules/chart/chart'


.room-details
  color fade-out()
  background default-color
  border-bottom 1px solid fade-out(0.25)

  // room-details-gallery
  &-gallery
    max-width     1440px
    max-height    485px
    margin        0 auto
    display       flex

    &__column1
      width       68.125%

    &__column2
      width       31.875%
      display     flex
      flex-wrap   wrap

  //
  &__wrapper
    margin-top 69px
    margin-bottom 72px
    display grid
    grid-gap 68px
    grid-template-columns auto 380px

  //
  &__details
    padding-top             1px
    display                 grid
    grid-gap                10px 79px
    grid-template-columns   280px auto

  //  room-details-impression
  &-impression
    &__container
      margin-top      19px
      max-width       320px
      display         flex

    &__title
      margin-left 2px

    // chart
    &__chart
      width         124px
      height        124px
      margin-right  28px


    // bullet-list
    &__bullet-list
      display             flex
      align-items         flex-end

      .bullet-list__item
        grid-template-columns  5px auto

      .bullet-list__item:first-child .bullet-list__circle
        background   linear-gradient(180deg, #FFE39C 0%, #FFBA9C 100%)
      .bullet-list__item:nth-child(2) .bullet-list__circle
        background linear-gradient(180deg, #6FCF97 0%, #66D2EA 100%)
      .bullet-list__item:nth-child(3) .bullet-list__circle
        background linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%)
      .bullet-list__item:nth-child(4) .bullet-list__circle
        background linear-gradient(180deg, #919191 0%, #3D4975 100%)

  // room-details-comments
  &__comments
    margin-top   2px
    grid-column  1/3

  &-comments
    &__header
      container()

    &__number
      margin-top            6px
      margin-right          1px
      white-space           nowrap
      color                 fade-out(0.5)

    &__container
      margin-top            20px

    &__user-comment
      margin-bottom         23px

  // room-details-rules && room-details-cancel
  &-rules,
  &-cancel
    &__container
      margin-top   17px

  &-rules
    &__title
      margin-left     20px
    .bullet-list__item
      margin-top      10px

  &-cancel
    margin-left 2px
    &__container
      max-width      340px

    &__text
      line-height    24px

  //
  &__payment
    padding-top   1px



  // media //
  // gallery
  &-gallery
    @media (max-width  lDesktopWidth)
      &__img1
        height        auto
        width         100%

    @media (min-width  tableWidth + 1px) and (max-width  lDesktopWidth)
      height          0px
      padding         0 0 33.7%

      &__img2,
      &__img3
        height        auto
        width         100%

    @media (max-width  tableWidth)
      flex-direction  column
      height          0px
      padding         0 0 75%

      &__img2,
      &__img3
        width         50%

      &__column1
        width         100%

      &__column2
        width         100%



  //  deitails
  @media (max-width  1200px)
    &__wrapper
      grid-template-columns   auto
      grid-gap                20px

  @media (min-width  tableWidth + 1px) and (max-width  1200px)
    &__details
      grid-template-columns   auto auto
      grid-gap                20px

  @media (max-width  tableWidth)
    &__wrapper
      padding-bottom 30px

    &__details
      grid-template-columns   auto
      grid-gap                40px

    &-impression__chart
      width 100px
      height 100px

    &__comments
      grid-column           1/2

  //  payment
  @media (max-width  1200px)
    &__payment
      margin                  20px auto 30px

  @media (max-width  phoneWidth)
    .payment
      width                 100%
      border                none
      box-shadow            none

      &__wrapper
        padding               20px 20px 0 0





