@require '../../layout/page/page'

@require '../../modules/search-hotel/search-hotel'
@require '../../modules/background-slides/background-slides'


.index
  display flex
  justify-content space-around

  &__wrapper
    max-width 1440px
    max-height 830px
    width 100%
    height 58vw
    overflow hidden

  &__container
    height 100%
    display flex

    @media (max-width tableWidth)
      justify-content space-around

  &__background-slides
    position relative
    z-index -1

  &__search-hotel
    padding-top 70px
    padding-left 140px
    
    @media (max-width smDesktopWidth)
      padding-left 30px

    @media (min-width phoneWidth + 1px) and (max-width tableWidth)
      min-height 480px

    @media (max-width phoneWidth)
      width 100%
      padding 0
      margin 0

  &__welcome-text-wrapper
    width 100%
    height 100%
    container(flex-end, flex-end)
    padding-bottom 21px
    padding-right 134px
    padding-left 20px

    @media (max-width smDesktopWidth)
      padding-right 30px

    @media (max-width tableWidth)
      display none

  &__welcome-text-container
    max-width 265px
    text-align right
    line-height 24px
    color fade-out()

  @media (max-width smDesktopWidth)
    min-height 500px

  @media (min-width phoneWidth + 1px) and (max-width tableWidth)
    min-height 480px

  @media (max-width phoneWidth)
    min-height 400px
