@require '../../layout/page/page'

@require '../../modules/item-info/item-info'
@require '../../modules/bullet-list/bullet-list'
@require '../../modules/user-comment/user-comment'
@require '../../modules/payment/payment'
@require '../../modules/impression/impression'


.room-details
  display flex
  justify-content space-around
  background default-color
  border-bottom 1px solid fade-out(0.25)
  color fade-out()

  &__wrapper
    max-width 1440px

  &__gallery-container
    display flex

    @media (max-width tableWidth)
      flex-direction column

    @media (max-width lDesktopWidth)
      padding 0

  &__column-left
    width 68.125%

    @media (max-width tableWidth)
      width 100%

  &__column-right
    width 31.875%
    display flex
    flex-wrap wrap
    
    @media (max-width tableWidth)
      width 100%

  &__img-left
    @media (max-width lDesktopWidth)
      height auto
      width 100%

  &__img-right-top,
  &__img-right-bottom
    @media (min-width tableWidth + 1px) and (max-width lDesktopWidth)
      height auto
      width 100%
      
    @media (max-width tableWidth)
      width 50%

  &__content
    margin 69px auto 62px
    max-width 1160px
    display grid
    grid-gap 68px
    grid-template-columns auto 380px

    @media (max-width desktopWidth)
      grid-template-columns auto
      justify-items center

    @media (max-width tableWidth)
      padding-bottom 30px

  &__details
    padding-top 1px
    display grid
    grid-gap 10px 79px
    grid-template-columns 280px auto

    @media (min-width smDesktopWidth + 1px) and (max-width desktopWidth)
      width 60%

    @media (min-width tableWidth + 1px) and (max-width smDesktopWidth)
      width 80%
      grid-template-columns auto auto
      grid-gap 40px

    @media (max-width tableWidth)
      margin 0 5px
      max-width 425px
      grid-template-columns auto
      grid-gap 70px
      justify-items center

  &__comments-wrapper
    margin-top 2px
    grid-column 1/3

    @media (max-width tableWidth)
      grid-column 1/2

  &__comments-header
    container()

  &__comments-number
    margin-top 6px
    margin-right 1px
    white-space nowrap
    color fade-out(0.5)

  &__user-comment-container
    margin-top 20px
    margin-bottom 23px

  &__rules-title
      margin-left 20px

  &__title
    title-style('medium')

  &__bullet-list-wrapper
    margin-top 17px

  &__cancel-container
    margin-left 2px

  &__cancel-content
    margin-top 17px
    max-width 340px

  &__cancel-text
    line-height 24px

  &__payment-wrapper
    padding-top 1px

    @media (max-width desktopWidth)
      margin 20px auto 30px
